<?xml version="1.0"?>
<robot name="diff_drive_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 基础链接 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.55 0.45 0.81"/> <!-- 机器人主体尺寸 -->
      </geometry>
      <origin xyz="0 0 0.405"/>
      <material name="blue"/>
    </visual>
  </link>

  <!-- 左轮 -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.09" length="0.03"/> <!-- 左轮尺寸 -->
      </geometry>
      <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- 左轮位置 -->
      <material name="black"/>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.2 0.01 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
  </joint>

  <!-- 右轮 -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.09" length="0.03"/> <!-- 右轮尺寸 -->
      </geometry>
      <origin rpy="1.57 0 0" xyz="0 0 0"/> <!-- 右轮位置 -->
      <material name="black"/>
    </visual>
  </link>


  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0 -0.2" rpy="0 0 0"/>
  </joint>

  <!-- 相机 -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.03 0.08 0.03"/> <!-- 相机尺寸 -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- 相机位置 -->
      <material name="red"/>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.2 0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- LiDAR -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/> <!-- LiDAR 尺寸 -->
      </geometry>
      <origin xyz="0.1 0 0.15" rpy="0 0 0"/> <!-- LiDAR 位置 -->
      <material name="green"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.1 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.02"/> <!-- IMU 尺寸 -->
      </geometry>
      <origin xyz="-0.1 0 0.1" rpy="0 0 0"/> <!-- IMU 位置 -->
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.1 0 0.1" rpy="0 0 0"/>
  </joint>

</robot>
